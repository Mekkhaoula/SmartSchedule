<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/kkk"
    android:background="@drawable/fff"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/kkkk"

        android:layout_height="375dp"
        android:weightSum="1"
        android:background="#a3000000"
        android:alpha="0.85">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/frameLayout5"
            android:onClick="res"
            android:alpha="0.85"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Schedule"
                android:id="@+id/textView22"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="#ff00baba" />

            <Button
                android:layout_width="53dp"
                android:layout_height="50dp"
                android:id="@+id/button36"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/riight"
                android:onClick="backFav" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text="New Text"
            android:id="@+id/textView28"
            android:background="#ff00baba" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:id="@+id/gg"
            android:layout_gravity="right"
            android:layout_below="@+id/frameLayout5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <CalendarView
                    android:id="@+id/calendar_view"
                    android:layout_width="341dp"
                    android:layout_height="match_parent"
                    android:weekNumberColor="#fff4fef9"
                    android:weekSeparatorLineColor="#ff030101" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/textView27"
                android:layout_gravity="center_vertical"
                android:background="#ff00baba" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:text="New Text"
                    android:id="@+id/textSalle" />

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView2"
                    android:layout_below="@+id/gg"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

