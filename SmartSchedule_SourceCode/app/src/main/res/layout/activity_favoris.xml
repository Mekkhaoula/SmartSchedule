<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/kkk"
    android:background="@drawable/fff"
    android:layout_height="548dp"
    android:weightSum="1">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="668dp"
    tools:context="fsr.smartschedule.UTILE.Favoris"
    android:background="#a3000000"
    android:alpha="0.85">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/frameLayout3"
        android:onClick="res"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.85">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Schedule"
            android:id="@+id/textView36"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#ff00baba" />

        <Button
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:id="@+id/button17"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/riight"
            android:onClick="backFav" />
    </FrameLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ListFavoris"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frameLayout3" />
</RelativeLayout>
   </LinearLayout>
