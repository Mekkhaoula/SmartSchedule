<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/kkk"
    android:background="@drawable/fff"
    android:layout_height="match_parent"
    android:weightSum="1">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#a3000000"
        android:onClick="tof"
        android:alpha="0.85">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Schedule"
            android:id="@+id/textView15"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#ff00baba"
            android:backgroundTint="#ff00baba" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button24"
            android:layout_gravity="left|center_vertical"
            android:onClick="showMenu"
            android:background="@drawable/bleu1" />

    </FrameLayout>

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.09"
        android:id="@+id/g"
        android:background="#a3000000"
        android:alpha="0.85">

        <Button
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:id="@+id/right"
            android:background="@drawable/riight"
            android:onClick="toright" />

        <Button
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:id="@+id/left"
            android:background="@drawable/leeft"
            android:onClick="toleft"
            android:layout_gravity="right|center_vertical" />

        <Button
            android:layout_width="225dp"
            android:layout_height="match_parent"
            android:id="@+id/button33"
            android:text="Mon Schedule"
            android:layout_gravity="center"
            android:background="#ff00baba"
            android:onClick="deconnexion" />
    </FrameLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/textView30"
        android:layout_gravity="center_horizontal"
        android:background="#ff00baba" />

    <android.support.v4.view.ViewPager
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/pager"
        android:layout_width="match_parent" android:layout_height="85dp"
        tools:context=".MainActivity"
        android:background="#70110306"
        android:alpha="0.85"
        android:layout_weight="0.91" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/textView53"
        android:layout_gravity="center_horizontal"
        android:background="#ff00baba" />

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/frameLayout"
        android:background="#a3000000"
        android:layout_weight="0.01"
        android:alpha="0.85">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button6"
            android:layout_gravity="center"
            android:onClick="showCalendar"
            android:background="@drawable/cal" />

    </FrameLayout>


</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="250dp"

        android:layout_weight="0.18"
        android:alpha="0.5"
        android:id="@+id/gg"
        android:background="#00baba"
        android:layout_gravity="right">
        <CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weekNumberColor="#ff0d0e0e"
            android:background="#ff00baba"
            android:weekSeparatorLineColor="#ff030101" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"

        android:id="@+id/ggg"
        android:background="#27000000">

    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
