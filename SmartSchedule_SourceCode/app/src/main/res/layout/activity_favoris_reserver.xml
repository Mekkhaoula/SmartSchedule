<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/kkk"
    android:background="@drawable/fff"
    android:layout_height="548dp"
    android:weightSum="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/kkkk"

        android:layout_height="548dp"
        android:weightSum="1"
        android:background="#a3000000"
        android:alpha="0.85">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/frameLayout5"
            android:onClick="res"
            android:alpha="0.85"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Schedule"
                android:id="@+id/textView22"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="#ff00baba" />

            <Button
                android:layout_width="53dp"
                android:layout_height="50dp"
                android:id="@+id/button36"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/riight"
                android:onClick="backFav" />
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:id="@+id/gg"
            android:layout_gravity="right"
            android:layout_below="@+id/frameLayout5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weekNumberColor="#fff4fef9"
                android:weekSeparatorLineColor="#ff030101" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textSalle"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="191dp"
            android:id="@+id/listView2"
            android:layout_below="@+id/gg"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    </LinearLayout>

