<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layoutt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="insideInset"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/kkk"
        android:background="@drawable/fff"
        android:layout_height="548dp"
        android:weightSum="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a3000000"
            android:id="@+id/frameLayout4" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Schedule"
                android:id="@+id/textView38"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="#ff00baba" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button19"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/bleu1"
                android:onClick="showMenuAdmin" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textView57"
            android:background="#ff00baba" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:weightSum="1"
            android:background="#a3000000"
            android:layout_weight="0.04">

            <FrameLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ff00baba" />

            <Button
                android:layout_width="115dp"
                android:layout_height="60dp"
                android:text="Users"
                android:id="@+id/button20"
                android:textColor="#ff00baba"
                android:background="#00ff3053"
                android:layout_weight="0.33" />

            <FrameLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ff00baba" />

            <Button
                android:layout_width="115dp"
                android:layout_height="60dp"
                android:text="Reservation"
                android:id="@+id/button30"
                android:textColor="#ff00baba"
                android:background="#00ff3053"
                android:layout_weight="0.33" />

            <FrameLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ff00baba" />

            <Button
                android:layout_width="115dp"
                android:layout_height="60dp"
                android:text="Salles"
                android:id="@+id/button31"
                android:textColor="#ff00baba"
                android:background="#00ff3053"
                android:layout_weight="0.33" />

            <FrameLayout
                android:layout_width="2dp"
                android:layout_height="60dp"
                android:background="#ff00baba" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textView39"
            android:background="#ff00baba"
            android:layout_gravity="right" />

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/pager"
            android:layout_width="wrap_content" android:layout_height="293dp"
            tools:context="fsr.smartschedule.RESERVATION.FaireRes"
            android:background="#70110306"
            android:layout_weight="0.99" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textView62"
            android:background="#ff00baba"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#a3000000">

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout2"
                android:background="#00000000"
                android:alpha="0.85">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/button18"
                    android:layout_gravity="center"
                    android:background="@drawable/cal"
                    android:onClick="showCalendarAdmin" />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="250dp"

        android:layout_weight="0.18"
        android:alpha="0.5"
        android:id="@+id/gg"
        android:background="#00baba"
        android:layout_gravity="right">
        <CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weekNumberColor="#ff0d0e0e"
            android:background="#ff00baba"
            android:weekSeparatorLineColor="#ff030101" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"

        android:id="@+id/ggg"
        android:background="#27000000">

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>